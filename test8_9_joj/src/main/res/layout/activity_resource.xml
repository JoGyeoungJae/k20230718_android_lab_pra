<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResourceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/width1"
        android:layout_height="@dimen/height1"
        android:src="@drawable/test"></ImageView>
    <ImageView
        android:layout_width="@dimen/width2"
        android:layout_height="@dimen/height2"
        android:src="@drawable/test"></ImageView>
    <ImageView
        android:layout_width="@dimen/width3"
        android:layout_height="@dimen/height3"
        android:src="@drawable/test"
       ></ImageView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_name1"
        style="@style/Mytext">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_name2"
        style="@style/Mytext">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_name3"
        style="@style/Mytext">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_name4"
        style="@style/Mytext">
    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버튼"
        android:textColor="@color/mycolor"/>
</LinearLayout>