<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#F3E994"
    >

    <ImageView
        android:id="@+id/targetView"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:src="@drawable/imag1"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Hellow world"
        android:textSize="30sp"
        android:textColor="#F16C6C"
        android:textStyle="bold"
        android:fontFamily="@font/bnyeongsungttf"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/visibleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버튼1"
        android:textSize="30sp"
        android:padding="30dp"
        android:backgroundTint="#87C5F6"
        android:textColor="#ff0000"
        android:fontFamily="@font/bnyeongsungttf"
        />

    <Button
        android:id="@+id/visibleView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버튼2"
        android:textSize="30sp"
        android:padding="30dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/bnyeongsungttf"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="30sp"
            android:layout_marginRight="10sp"
            android:fontFamily="@font/bnyeongsungttf"/>

        <Button
            android:id="@+id/joinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="join"
            android:textSize="30sp"
            android:fontFamily="@font/bnyeongsungttf"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web|phone|email"
        android:fontFamily="@font/bnyeongsungttf"
        android:text="이지스퍼블리싱 - 웹 페이지 : http//www.naver.com, 전화번호:010-8745-2626, 이메일: kasjdkfjslkdj@gmail.com"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:text="아이디 입력해주세요"
        />
</LinearLayout>